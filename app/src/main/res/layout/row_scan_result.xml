<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/freiButton"
        android:layout_width="51dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frei" />

    <ImageView
        android:id="@+id/langsamButton"
        android:layout_width="51dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/haltButton"
        app:layout_constraintStart_toEndOf="@id/freiButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/langsam" />

    <ImageView
        android:id="@+id/haltButton"
        android:layout_width="51dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/langsamButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notfall" />

    <ImageView
        android:id="@+id/notButton"
        android:layout_width="51dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/haltButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/halt" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>